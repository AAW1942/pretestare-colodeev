{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "./dist",
		"esModuleInterop": true,
		"strict": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"declaration": true,
		"resolveJsonModule": true,
		"baseUrl": "./src",
		"noImplicitAny": false,
		"strictNullChecks": true,
		"paths": {
			"*": [
				"*",
				"src/*"
			]
		}
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}